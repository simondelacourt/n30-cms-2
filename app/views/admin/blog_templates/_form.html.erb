<%= form_for [:admin, @blogtemplate], remote: true, html: {role: "form", class: "form-horizontal"}  do |f| -%>
<div class="form-group">
	<%= f.label :title, :class => 'col-lg-1 control-label'%>
	<div class="col-lg-11">
		<%= f.text_field :title, :class => "form-control"%>
	</div>
</div>
<ul class="nav nav-tabs col-lg-offset-1 col-lg-11" id="dMenu">
	<li class="active"><a href="#index" data-toggle="tab">Index</a></li>
	<li><a href="#read" data-toggle="tab">Lees artikel pagina</a></li>
	<li><a href="#category" data-toggle="tab">Categorie pagina</a></li>
	<li><a href="#search" data-toggle="tab">Zoekresultaten</a></li>
	
</ul>
<div class="tab-content col-lg-offset-1 col-lg-11">
	<div class="tab-pane  active" id="index">
		<div class="form-group form-pane">
			<%= f.text_area :blog_index, :rows => 80, :cols => 80, :class => "form-control"%>
		</div>
		<script>var editor = CodeMirror.fromTextArea(document.getElementById("blog_template_blog_index"), {lineNumbers: true, mode: "ruby"});</script>
	</div>
	<div class="tab-pane fade" id="read">
		<div class="form-group form-pane">
			<%= f.text_area :blog_read, :rows => 80, :cols => 80, :class => "form-control"%>
		</div>
		<script>var editor2 = CodeMirror.fromTextArea(document.getElementById("blog_template_blog_read"), {lineNumbers: true, mode: "ruby"});</script>
	</div>
	<div class="tab-pane fade" id="category">
		<div class="form-group form-pane">
			<%= f.text_area :blog_category, :rows => 80, :cols => 80, :class => "form-control"%>
		</div>
		<script>var editor3 = CodeMirror.fromTextArea(document.getElementById("blog_template_blog_category"), {lineNumbers: true, mode: "ruby"});</script>
	</div>
	<div class="tab-pane fade" id="search">
		<div class="form-group form-pane">
			<%= f.text_area :blog_search, :rows => 80, :cols => 80, :class => "form-control"%>
		</div>
		<script>var editor4 = CodeMirror.fromTextArea(document.getElementById("blog_template_blog_search"), {lineNumbers: true, mode: "ruby"});</script>
	</div>
</div>
<script>
$(function () {
	$('#dMenu a[href="#index"]').tab('show')
})
  
</script>
<div class="form-group">
	<div class="col-lg-offset-1 col-lg-11">
		<%= f.submit :class => "btn btn-default stylesubmit" %>
	</div>
</div>
<% end -%>