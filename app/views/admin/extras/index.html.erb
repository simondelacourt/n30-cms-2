<%= render :partial =>'admin/shared/settings_navbar' -%>
<%= form_for :extras, :url => { :action => 'importtumblr'}, :html => { class: "form-horizontal"} do |f| %>

<h2>Importeer Tumblr</h2>
<div class="form-group">
	<%= f.label :URL, :class => 'col-lg-1 control-label'%>
    <div class="col-lg-11">
		<%= f.text_field :url, :class => 'form-control' -%>
	</div>
</div>
<div class="form-group">
	<%= f.label :categorie, :class => 'col-lg-1 control-label'%>
    <div class="col-lg-11">
		<%= f.grouped_collection_select :blog_category_id, @bloggroup, :blog_categories, :title, :id, :title, { :include_blank => false }, {:class => "form-control"}%>
	</div>
</div>

<div class="form-group">
  <div class="col-lg-offset-1 col-lg-11">
      <%= f.submit :class => "btn btn-default" %>
  </div>
</div>

<% end -%>