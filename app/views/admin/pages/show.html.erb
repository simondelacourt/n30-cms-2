<h2><i class="icon-th-large"></i> <%= @page.title -%></h2>
<div class="row">
	
    <div class="col-md-9">
		<h3>Pagina instellingen</h3>
		<%= form_for [:admin,@page] do |f| -%>
	    <div class="form-group">
	      <label for="exampleInputEmail1">Embed bronnen:</label>
	      <%= f.check_box :sourcefromchildren -%>
	    </div>
		
		<% end -%>
		<h3>Pagina</h3>
<%= @page.body %>
<% if @embeddables.length > 0 %>
<section id="embedabbles">
	<div class="row">
	
	<% @embeddables.each do |e| %>
	<% if e.linkmode == 'link'%>
	<div class="col-md-3 embedblock"><%= image_tag(embedify(e.htmlbody, 180)['thumbnail_url']) -%></div>
	<% else %>
	<div class="col-md-3 embedblock"><%= image_tag(e.image(:thumb)) -%></div>
	
	<% end %>
	<% end -%>
</div>
</section>
<% end -%>
</div>
<aside class="col-md-3">
	<div class="btn-group  btn-group-sm btn-group-vertical">
		<%= link_to 'Verwijder pagina', admin_page_url(@page), :confirm => "Are you sure you want to delete this attachment?", :method => :delete, :action => "destroy", :class => 'btn btn-primary' -%>
		<%= link_to 'Voeg afbeelding toe', new_admin_page_embeddable_url(@page, :mode => 'image'), :class => 'btn btn-default' -%>
		<%= link_to 'Embed link', new_admin_page_embeddable_url(@page, :mode => 'link'), :class => 'btn btn-default' -%>
	</div>
</div>
</div>