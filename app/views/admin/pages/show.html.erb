<h2><%= @page.title -%></h2>
<div class="row">
	<div class="col-md-10">
		<div class="panel panel-default">
			<div class="panel-heading"><h3 class="panel-title">Pagina instellingen</h3></div>
			<div class="panel-body">
				<%= form_for [:admin,@page] do |f| -%>
				<div class="form-group">
					<label for="exampleInputEmail1">Embed bronnen:</label>
					<%= f.check_box :sourcefromchildren -%>
				</div>
				<div class="form-group pull-right">
						<%= f.submit :class => "btn btn-default" %>
				</div>
				<% end -%>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading"><h3 class="panel-title"><%= link_to 'Pagina tekst', edit_admin_page_url(@page) -%></h3></div>
			<div class="panel-body">
				<%= raw(@page.body) %>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading"><h3 class="panel-title">Ingesloten Objecten</h3></div>
			<div class="panel-body">
				<% if @embeddables.length > 0 %>
				<div class="row">
					<% @embeddables.each do |e| %>
					<% if e.linkmode == 'link'%>
					<div class="col-md-2"><%= link_to(image_tag(embedify(e.htmlbody, 180)['thumbnail_url'], :class => 'img-thumbnail img-responsive'), edit_admin_page_embeddable_url(:id => e.id, :page_id => params[:id])) -%></div>
					<% else %>
					<div class="col-md-2"><%= link_to(image_tag(e.image(:thumb), :class => 'img-thumbnail img-responsive'),  edit_admin_page_embeddable_url(:id => e.id, :page_id => params[:id]))   -%></div>
					<% end %>
					<% end -%>
				</div>
				<% end -%>
			</div>
		</div>
	</div>
	<aside class="col-md-2">
		<div class="btn-group-vertical">
			<%= link_to 'Wijzig pagina', edit_admin_page_url(@page), :class => 'btn btn-default' -%>
			<%= link_to 'Verwijder pagina', admin_page_url(@page), :confirm => "Weet u zeker dat u deze pagina wilt verwijderen?", :method => :delete, :action => "destroy", :class => 'btn btn-default' -%>
			<%= link_to 'Voeg afbeelding toe', new_admin_page_embeddable_url(@page, :mode => 'image'), :class => 'btn btn-default' -%>
			<%= link_to 'Embed link', new_admin_page_embeddable_url(@page, :mode => 'link'), :class => 'btn btn-default' -%>
		</div>
	</div>
</div>