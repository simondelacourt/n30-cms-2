<%= form_for [:admin, @template], html: {role: "form", class: "form-horizontal"}  do |f| -%>
<% if @template.errors.any? %>
<div id="errorExplanation" class="well">
  <h4><%= pluralize(@template.errors.count, "error") %> prohibited this record from being saved:</h4>
  <ul>
  <% @template.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :title, :class => 'col-lg-1 control-label'%>
    <div class="col-lg-11">
		<%= f.text_field :title, :class => "form-control"%>
	</div>
</div>
<div class="form-group">
  <div class="col-lg-offset-1 col-lg-11">
    <div class="checkbox">
      <label>
        <%= f.check_box :default %> Standaard template
      </label>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col-lg-offset-1 col-lg-11">
	  <ul class="list-inline">
	    <li>Pagina titel <strong>[title]</strong></li>
		<li>CSS files <strong>[css]</strong></li>
		<li>JS files <strong>[js]</strong></li>
		<li>Content <strong>[body]</strong></li>
		<li>CSRF <strong>[csrf]</strong></li>
		<li>Menu <strong>[mainmenu]</strong></li>
		<li>Sublevel menus <strong>[menu_1]</strong></li>
	  </ul>
  </div>
</div>
<div class="form-group">
	<%= f.label :template, :class => 'col-lg-1 control-label'%>
    <div class="col-lg-11">
		<%= f.text_area :template, :class => "form-control", :rows => 40, :cols => 80%>
	</div>
</div>
		<div class="form-group">
		  <div class="col-lg-offset-1 col-lg-11">
		      <%= f.submit :class => "btn btn-default" %>
		  </div>
		</div>
<% end -%>