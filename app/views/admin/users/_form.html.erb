<%= form_for [:admin, @user], html: {role: "form", class: "form-horizontal"} do |f| -%>
<div class="form-group">
	<%= f.label 'Voornaam', :class => 'col-lg-1 control-label'%>
    <div class="col-lg-11">
		<%= f.text_field :firstname, :class => "form-control"%>
	</div>
</div>
<div class="form-group">
	<%= f.label 'Achternaam', :class => 'col-lg-1 control-label'%>
    <div class="col-lg-11">
		<%= f.text_field :familyname, :class => "form-control"%>
	</div>
</div>
<div class="form-group">
	<%= f.label 'Wachtwoord', :class => 'col-lg-1 control-label'%>
    <div class="col-lg-11">
		<%= f.text_field :password, :class => "form-control"%>
	</div>
</div>
<div class="form-group">
	<%= f.label 'Wachtwoord bevestiging', :class => 'col-lg-1 control-label'%>
    <div class="col-lg-11">
		<%= f.text_field :password_confirmation, :class => "form-control"%>
	</div>
</div>
<div class="form-group">
	<%= f.label 'E-mail adres', :class => 'col-lg-1 control-label'%>
    <div class="col-lg-11">
		<%= f.text_field :email, :class => "form-control"%>
	</div>
</div>
<div class="form-group">
  <div class="col-lg-offset-1 col-lg-11">
      <%= f.submit :class => "btn btn-default" %>
  </div>
</div>
<% end -%>