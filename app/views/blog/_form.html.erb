<%= semantic_form_for @blogpost do |f| -%>
<%= f.semantic_errors :state %>

    <%= f.inputs do %>
		<%= f.input :title, :as => :string%>
	<% end -%>
	<%= f.inputs :name => "Tekst" do%>
		<%= f.input :intro, :input_html => { :class => 'autogrow', :rows => 10, :cols => 80} -%>
		<%= f.input :body, :input_html => { :class => 'autogrow', :rows => 20, :cols => 80} -%>

	<% end %>
    <%= f.actions %>
<% end -%>