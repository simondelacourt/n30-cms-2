<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class=> "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <%= f.text_field :email, :class => "form-control", :placeholder => 'E-mail adres' %>
  
  <%= f.password_field :password, :class => "form-control", :placeholder => 'Wachtwoord' %>
  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
    <%= f.check_box :remember_me %>  Remember me
  </label>
  <% end -%>
  <%= f.submit "Sign in", :class => 'btn btn-lg btn-primary btn-block' %>
  <%= render "devise/shared/links" %>
  
 <% end -%>
